#!/bin/sh

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking
echo "ğŸ“ Running TypeScript type check..."
bun run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the errors before committing."
  exit 1
fi

# Run ESLint
echo "âœ¨ Running ESLint..."
bun run lint:check
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix the errors before committing."
  echo "ğŸ’¡ You can run 'bun run lint:fix' to automatically fix some issues."
  exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."
